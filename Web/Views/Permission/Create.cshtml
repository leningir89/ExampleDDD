@model ExampleDDD.Domain.Entities.tbpermission

@{
    ViewBag.Title = "Crear permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear permiso</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Información:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="nametbpermission" class="control-label col-md-2">Nombre:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nametbpermission, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nametbpermission, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
